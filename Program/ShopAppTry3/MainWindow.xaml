                    <TextBox Name="AccountZipDisplay" HorizontalAlignment="Left" Margin="559,215,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Background="LightGray" MaxLength="9"/>
