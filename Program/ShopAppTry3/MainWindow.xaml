                    <Label Content="City" HorizontalAlignment="Left" Margin="239,191,0,0" VerticalAlignment="Top"/>
                    <Label Content="State" HorizontalAlignment="Left" Margin="495,191,0,0" VerticalAlignment="Top"/>
                    <Label Content="Zip" HorizontalAlignment="Left" Margin="559,191,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="AccountCityDisplay" HorizontalAlignment="Left" Margin="239,215,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="240" Background="LightGray"/>
